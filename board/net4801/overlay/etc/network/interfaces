# loopback interface
auto lo
iface lo inet loopback

# internal interface
auto wlan0
iface wlan0 inet static
    address 10.0.0.1
    netmask 255.255.255.0

# internal interface
auto eth1
iface eth1 inet static
    address 10.0.1.1
    netmask 255.255.255.0

# internal interface
auto eth2
iface eth2 inet static
    address 10.0.2.1
    netmask 255.255.255.0
